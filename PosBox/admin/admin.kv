<FloatButton@ButtonBehavior+Label>:
    text : "default"

<AdminWindow>:
    id : main_win
    orientation : "vertical"
    canvas.before :
        Color :
            rgba : (1, 1, 1, 1)
        Rectangle :
            size : self.size
            pos : self.pos

    BoxLayout :
        id : top_nav
        size_hint_y : None
        height : 40
        canvas.before :
            Color :
                rgba : (0.06, 0.45, 0.45, 1)
            Rectangle :
                size : self.size
                pos : self.pos

        FloatButton :
            id : file_trigger
            text : "File"
            on_release : file_dropdown.open(self)
            size_hint : (0.1, None)
            height : 40

            Widget :
                on_parent : file_dropdown.dismiss()

                DropDown :
                    id : file_dropdown
                    Button :
                        id : close
                        text : "quit"
                        size_hint_y : None
                        height : 40

        Label :
            text : "Admin Dashboard"
            bold : True
            size_hint : (0.9, None)
            height : 40

    BoxLayout :
        id : content_nav

        BoxLayout :
            id : nav_tabs
            orientation : "vertical"
            size_hint_x : 0.2
            spacing : 3
            canvas.before :
                Color :
                    rgba : (0.06, 0.40, 0.40, 1)
                Rectangle :

                    size : self.size
                    pos : self.pos

            ToggleButton :
                id : user_toggle
                size_hint_y : 0.1
                text : "Manage Users"
                background_color : (0.06, 0.47, 0.47, 1)
                background_normal : ""
                state : "down"
                group : 'admin_navs'
                on_state : root.change_screen(self)
            ToggleButton :
                id : products_toggle
                size_hint_y : 0.1
                text : "Manage Products"
                background_color : (0.06, 0.47, 0.47, 1)
                background_normal : ""
                group : 'admin_navs'
                on_state : root.change_screen(self)
            ToggleButton :
                id : analysis_toggle
                size_hint_y : 0.1
                text : "Product Analysis"
                background_color : (0.06, 0.47, 0.47, 1)
                background_normal : ""
                group : 'admin_navs'
                on_state : root.change_screen(self)
            Label :
                id : sp
                text : ""
                size_hint_y : 0.7

        BoxLayout :
            id : all_content
            size_hint_x : 0.8
            padding : (20, 20)
            ScreenManager :
                id : scrn_mngr
                Screen :
                    id : scrn_content
                    name : 'scrn_content'
                    BoxLayout :
                        orientation : "vertical"
                        BoxLayout :
                            id : scrn_contents

                        BoxLayout :
                            Label:
                                id : info
                                text : ""
                                markup : True
                                size_hint_y : None
                                height : 30
                                font_size : '20dp'
                        BoxLayout :
                            id : ops_fields
                            size_hint_y : None
                            height : 35
                        BoxLayout :
                            id : ops_btns
                            spacing : 10
                            size_hint_y : None
                            height : 45
                            Button :
                                id : crud_add
                                text : "Add User"
                                on_release : root.add_user_fields()
                            Button :
                                id : crud_update
                                text : "Update User"
                                on_release : root.update_user_fields()
                            Button :
                                id : crud_remove
                                text : "Remove User"
                                on_release : root.remove_user_fields()


                Screen :
                    id : scrn_product_content
                    name : 'scrn_product_content'
                Screen :
                    id : scrn_analysis
                    name : 'scrn_analysis'
