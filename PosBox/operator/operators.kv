<FlatButton@ButtonBehavior+Label>:
    font_size : 14

<OperatorsWindow>:
    id : main_win
    orientation : "vertical"
    canvas.before:
        Color:
            rgba : (1, 1, 1, 1)
        Rectangle :
            size : self.size
            pos : self.pos
    BoxLayout :
        id : header
        size_hint_y : None
        height : 40
        canvas.before:
            Color:
                rgba : (0.06, .45, .45, 1)
            Rectangle :
                size : self.size
                pos : self.pos
        Label :
            text : "POS+=1"
            size_hint_x : 0.9
            bold : True
            color : (1, 1, 1, 1)
        FlatButton :
            id : loggedin_user
            text : 'arif'
            color : (1, 1, 1, 1)

    BoxLayout :
        id : current
        size_hint_y : None
        height : 50
        canvas.before:
            Color:
                rgba : (1, 1, 1, 1)
            Rectangle :
                size : self.size
                pos : self.pos
        Button :
            text : "Current Item"
            background_normal : ""
            background_color : (0.06, 0.32, 0.32, 1)
            size_hint_x : 0.4
        Button :
            id : cur_product
            text : "Default Product"
            background_normal : ""
            background_color : (0.06, 0.4, 0.4, 1)
            size_hint_x : 0.4
        Button :
            id : cur_price
            text : "0.00"
            background_normal : ""
            background_color : (0.06, 0.65, 0.65, 1)
            size_hint_x : 0.2
    BoxLayout :
        padding : 5
        BoxLayout :
            id : product_details
            orientation : "vertical"
            size_hint_x : 0.8
            spacing : 10

            BoxLayout :
                id : product_levels
                size_hint_y : None
                height : 40
                canvas.before:
                    Color:
                        rgba : (0.06, .45, .45, 1)
                    Rectangle :
                        size : self.size
                        pos : self.pos
                FlatButton:
                    text : "Product Code"
                    size_hint_x : 0.3
                FlatButton:
                    text : "Product Name"
                    size_hint_x : 0.3
                FlatButton:
                    text : "Qty"
                    size_hint_x : 0.1
                FlatButton:
                    text : "Price"
                    size_hint_x : 0.2
                FlatButton:
                    text : "Total"
                    size_hint_x : 0.2
            BoxLayout :
                id : product_inputs
                size_hint_y : None
                height : 30
                spacing : 5
                TextInput :
                    id : code_inp
                    size_hint_x : 0.3
                    multiline : False
                    on_text_validate : root.update_purchases()
                TextInput :
                    id : pname_inp
                    size_hint_x : 0.3
                TextInput :
                    id : qty_inp
                    size_hint_x : 0.1
                TextInput :
                    id : price_inp
                    size_hint_x : 0.2
                TextInput :
                    id : tot_inp
                    size_hint_x : 0.2
            BoxLayout :
                id : add_to_cart
                orientation : "vertical"
                BoxLayout :
                    size_hint_y : None
                    height : 30
                    canvas.before :
                        Color :
                            rgba : (0.06, 0.45, 0.45, 1)
                        Rectangle :
                            size : self.size
                            pos : self.pos
                    Label :
                        text : "Product Code"
                        size_hint_x : 0.3
                    Label :
                        text : "Product Name"
                        size_hint_x : 0.3
                    Label :
                        text : "Qty"
                        size_hint_x : 0.1
                    Label :
                        text : "Price"
                        size_hint_x : 0.2
                    Label :
                        text : "Total"
                        size_hint_x : 0.2
                GridLayout :
                    id : products
                    cols : 1

        BoxLayout :
            id : preview
            orientation : "vertical"
            size_hint_x : 0.2

            TextInput :
                id : receipt_preview
                readonly :True
                text : "The Collector\n123 Main st\nNowhere, Space\n\nTel: +880-98434443\nReceipt No: \nDate: \n\n "

    BoxLayout:
        id : footer
        size_hint_y : None
        height : 30
        canvas.before:
            Color :
                rgba : (0.06, 0.47, 0.47, 1)
            Rectangle :
                size : self.size
                pos : self.pos

        Label :
            text : "Maintained by Arifcse21"